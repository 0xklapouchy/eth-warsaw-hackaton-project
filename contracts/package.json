{
  "name": "@ethwarsaw/hackaton",
  "version": "0.0.1",
  "description": "Hackaton",
  "license": "GPL-3.0",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat deploy --write true --network",
    "deploy:hardhat": "hardhat deploy --write true --network hardhat --tags",
    "deploy:goerli": "hardhat deploy --write true --network goerli --tags",
    "verify": "hardhat etherscan-verify --license GPL-3.0 --solc-input --network",
    "test": "hardhat test"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.0",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.11.0",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.12",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-watcher": "^2.5.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "shelljs": "^0.8.5",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2"
  },
  "files": [
    "build/**",
    "artifacts/**",
    "contracts/**",
    "deployments/**",
    "deploy/**"
  ]
}
